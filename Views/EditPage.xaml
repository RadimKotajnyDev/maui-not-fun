<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MauiMacApp.ViewModels"
             x:DataType="vm:EditPageViewModel"
             x:Class="MauiMacApp.Views.EditPage">

    <VerticalStackLayout Spacing="10" Padding="20">
        
        <Entry Placeholder="Název" Text="{Binding Name}" />
        
        <Entry Placeholder="Autor" Text="{Binding Author}" />
        
        <Entry Placeholder="Žánr" Text="{Binding Genre}" />

        <HorizontalStackLayout Spacing="10" Margin="0,20,0,0">
            
            <Button Text="Save" Command="{Binding SaveCommand}" />
            
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
        
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>